<!DOCTYPE html>
<html lang="tr">
  <head>
    <%- include('../layouts/head', { title: 'İletişim | EMMİ' }) %>
    <script src="/js/contact.js" defer></script>
  </head>
  <body>
    <%- include('../partials/top_app_bar') %>

    <main class="main">
      <div class="container">
        <section class="contact-section">
          <!-- Başlık -->
          <div class="contact-header">
            <h1 class="headline-large">İletişime Geçin</h1>
            <p class="body-large text-on-surface-variant">
              Sorularınız ve önerileriniz için bizimle iletişime geçebilirsiniz.
            </p>
          </div>

          <div class="contact-grid">
            <!-- Sol Kolon -->
            <div class="contact-info">
              <!-- İletişim Kartları -->
              <div class="info-cards">
                <div class="info-card">
                  <div class="icon-wrapper">
                    <span class="material-symbols-rounded">location_on</span>
                  </div>
                  <div class="info-content">
                    <h3 class="title-medium">Adres</h3>
                    <p class="body-medium">Fırat Üniversitesi Teknoloji Fakültesi, Elazığ</p>
                  </div>
                </div>

                <div class="info-card">
                  <div class="icon-wrapper">
                    <span class="material-symbols-rounded">mail</span>
                  </div>
                  <div class="info-content">
                    <h3 class="title-medium">Email</h3>
                    <p class="body-medium">iletisimtechemmi@gmail.com</p>
                  </div>
                </div>

                <div class="info-card">
                  <div class="icon-wrapper">
                    <span class="material-symbols-rounded">schedule</span>
                  </div>
                  <div class="info-content">
                    <h3 class="title-medium">Çalışma Saatleri</h3>
                    <p class="body-medium">Pazartesi - Cuma: 09:00 - 18:00</p>
                  </div>
                </div>
              </div>

              <!-- Harita -->
              <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3114.590601681571!2d39.19350807573815!3d38.68127587177102!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4076c0453873446b%3A0x8944e73c644c7182!2sF%C4%B1rat%20%C3%9Cniversitesi%20Teknoloji%20Fak%C3%BCltesi!5e0!3m2!1str!2str!4v1735768245302!5m2!1str!2str"></iframe>
              </div>
            </div>

            <!-- Sağ Kolon -->
            <div class="contact-form">
              <form id="contactForm">
                <div class="form-header">
                  <h2 class="title-large">Mesaj Gönderin</h2>
                </div>

                <div class="form-fields">
                  <div class="text-field-wrapper">
                    <input type="text" class="text-field" name="name" placeholder=" " required>
                    <label class="label">Ad Soyad</label>
                  </div>

                  <div class="text-field-wrapper">
                    <input type="email" class="text-field" name="email" placeholder=" " required>
                    <label class="label">Email</label>
                  </div>

                  <div class="text-field-wrapper">
                    <input type="text" class="text-field" name="subject" placeholder=" " required>
                    <label class="label">Konu</label>
                  </div>

                  <div class="text-field-wrapper">
                    <textarea class="text-field" name="message" placeholder=" " rows="5" required></textarea>
                    <label class="label">Mesajınız</label>
                  </div>
                </div>

                <button type="submit" class="btn btn-fill submit-btn">
                  <span class="btn-content">
                    <span class="material-symbols-rounded">send</span>
                    <span class="label-large">Gönder</span>
                  </span>
                  <span class="loading-spinner"></span>
                </button>
              </form>
            </div>
          </div>
        </section>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html> 