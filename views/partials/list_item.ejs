<% const { _id: blogId, title, reaction, totalVisit, createdAt, updatedAt } =
locals.blog %>

<div class="list-item large">
  <div>
    <p class="body-large text-on-surface"><%= title %></p>
    <p class="list-item-text body-medium text-on-surface-variant">
      <b>Yayınlandı :</b>
      <%= new Date(createdAt).toLocaleDateString('tr-TR', { day: 'numeric',
      month: 'short', year: '2-digit' }) %> <% if (String(createdAt) !==
      String(updatedAt)) { %> &nbsp;
      <b>Düzenlendi: </b>
      <%= new Date(updatedAt).toLocaleDateString('tr-TR', { day: 'numeric',
      month: 'short', year: '2-digit' }) %> <% } %>
    </p>
  </div>
  <div class="wrapper">
    <div class="meta-list">
      <div class="meta-item text-on-surface-variant">
        <span class="icon-small material-symbols-rounded" aria-hidden="true"
          >favorite</span
        >
        <p class="body-medium"><%=reaction.toLocaleString('tr-TR') %></p>
      </div>
      <div class="meta-item text-on-surface-variant">
        <span class="icon-small material-symbols-rounded" aria-hidden="true"
          >visibility</span
        >
        <p class="body-medium"><%=totalVisit.toLocaleString('tr-TR') %></p>
      </div>
    </div>
    <div class="list-item-actions">
      <a href="/blogs/<%=blogId%>/edit" class="btn btn-text">
        <p class="label-large">Düzenle</p>
        <div class="state-layer"></div
      ></a>
      <button class="btn btn-text error" data-blog-delete-btn="<%=blogId%>">
        <p class="label-large">Sil</p>
        <div class="state-layer"></div>
      </button>
    </div>
  </div>
  <div class="state-layer"></div>
  <a href="/blogs/<%=blogId%>" title="<%=title%>" class="list-item-link"></a>
</div>
